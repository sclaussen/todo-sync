# Claude Code Settings - Sound Notifications Example
# Place this file at .claude/settings.yaml in your project root

# Hook configuration for sound notifications
hooks:
  Stop:
    - hooks:
      - type: command
        command: '.claude/hooks/step-complete.sh'
  UserInputRequired:
    - hooks:
      - type: command
        command: '.claude/hooks/user-input-required.sh'

# Optional: Allow all bash commands without prompts
permissions:
  allow:
    - Bash(*)
    - WebFetch(*)
    - WebSearch(*)
  deny: []